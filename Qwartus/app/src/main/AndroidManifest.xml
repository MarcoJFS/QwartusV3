<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ipleira.estg.qwartus">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ac_Qwartus"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuLoginFeito"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.qwartus.MENULOGINFEITO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginPage"
            android:label="@string/login">
            <intent-filter>
                <action android:name="android.intent.qwartus.LOGINPAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterPage"
            android:label="@string/registo">
            <intent-filter>
                <action android:name="android.intent.qwartus.REGISTERPAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResultadoPesquisa"
            android:label="@string/resultadosPesquisa">
            <intent-filter>
                <action android:name="android.intent.qwartus.RESULTADOPESQUISA" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>