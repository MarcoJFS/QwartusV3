<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_novo_anuncio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pt.ipleira.estg.qwartus.NovoAnuncio">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/qwartus2"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Exmplo "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:id="@+id/txtvUser"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView" />

    <Button
        android:text="Guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:id="@+id/btnGuardar" />

    <TextView
        android:text="@string/local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:id="@+id/tvLocal"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDescricao"
        android:layout_below="@+id/etxtLocal"
        android:layout_alignStart="@+id/etxtLocal" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textMultiLine"
        android:text="qwerty"
        android:ems="10"
        android:id="@+id/etxtDescricao"
        android:layout_below="@+id/tvDescricao"
        android:layout_alignStart="@+id/tvDescricao"
        android:layout_marginTop="12dp" />

    <ImageView
        android:layout_width="100dp"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:id="@+id/imvImagens"
        android:layout_height="100dp"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/etxtDescricao"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/AddImg"
        android:id="@+id/btnAddImagem"
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:layout_marginBottom="24dp"
        android:layout_alignBottom="@+id/imvImagens"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPreco"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/btnGuardar"
        android:layout_alignStart="@+id/etxtDescricao" />

    <EditText
        android:layout_height="50dp"
        android:inputType="textMultiLine"
        android:text="123456"
        android:ems="10"
        android:id="@+id/etxtLocal"
        android:layout_width="300dp"
        android:layout_below="@+id/imageView2"
        android:layout_toEndOf="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|numberDecimal"
        android:text="2222"
        android:ems="10"
        android:id="@+id/etxtPreÃ§o"
        android:layout_alignBaseline="@+id/tvPreco"
        android:layout_alignBottom="@+id/tvPreco"
        android:layout_toEndOf="@+id/txtvUser" />
</RelativeLayout>
