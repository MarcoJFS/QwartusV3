<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:srcCompat="@drawable/qwartus2"
        android:id="@+id/imageView8"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvProprietario"
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_toEndOf="@+id/textView15"
        android:layout_marginStart="19dp"
        android:textSize="18sp" />

    <TextView
        android:text="Local:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:layout_marginTop="22dp"
        android:id="@+id/textView17"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvLocal"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_toEndOf="@+id/textView17"
        android:layout_marginStart="19dp"
        android:textSize="18sp" />

    <TextView
        android:text="Descrição:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textView19"
        android:layout_below="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_height="50dp"
        android:id="@+id/txtvDescricao"
        android:layout_width="300dp"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    <TextView
        android:text="Propriatário:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_marginStart="18dp"
        android:layout_below="@+id/imageView8"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <Button
        android:text="COntactar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnContactar"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/txtvDescricao" />


    <TextView
        android:text="Preço:"
        android:layout_width="100dp"
        android:id="@+id/textView22"
        android:layout_height="25dp"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/btnContactar"
        android:layout_alignBottom="@+id/btnContactar"
        android:layout_alignStart="@+id/textView21" />

    <TextView
        android:text="Imagens:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView19" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/textView21"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/btnContactar">


        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/border_swipe"

            ></android.support.v4.view.ViewPager>
    </LinearLayout>

    <TextView
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvPreco"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView22"
        android:layout_alignBottom="@+id/textView22"
        android:layout_toEndOf="@+id/textView22" />


</RelativeLayout>